<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TelaPerfil">

    <View
        android:id="@+id/box_top_shadow"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="#402C2ABD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/box_top"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:background="#2C2ABD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/box_bottom_shadow"
        android:layout_width="412dp"
        android:layout_height="37dp"
        android:background="#402C2ABD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/box_bottom"
        android:layout_width="412dp"
        android:layout_height="32dp"
        android:background="#2C2ABD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_who"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_alternates_semibold_italic"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:clickable="true"
        android:onClick="IrInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/box_center"
        android:layout_width="412dp"
        android:layout_height="600dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="76dp"
        android:background="#CC2C2ABD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314"
        tools:layout_editor_absoluteX="-1dp" />

    <ImageButton
        android:id="@+id/profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_btn_perfil"
        android:src="@drawable/perfil_de_usuario__1__1"
        app:layout_constraintStart_toStartOf="@+id/box_center"
        app:layout_constraintTop_toTopOf="@+id/box_center" />


    <ImageButton
        android:id="@+id/more_profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/background_btn_perfil"
        android:src="@drawable/mais"
        app:layout_constraintStart_toStartOf="@+id/box_center"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/editNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/txtedit_background"
        android:fontFamily="@font/montserrat_extrabold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#4DFFFFFF"
        android:textSize="23sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/box_center"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="@+id/box_center"
        app:layout_constraintTop_toTopOf="@+id/box_center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="387dp"
        android:layout_height="180dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/txtedit_background"
        android:fontFamily="@font/montserrat_extrabold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#4DFFFFFF"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="@+id/box_center"
        app:layout_constraintTop_toBottomOf="@+id/profile_pic" />


</androidx.constraintlayout.widget.ConstraintLayout>